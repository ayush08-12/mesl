#include <lpc21xx.h>

unsigned int delay,var;
  
int main ()
{
	PINSEL1 = 0x00000000 ;				
	IO0DIR  = 0x00FF0000 ;
   
	while(1)
    {
    	IO0PIN = 0x00000000;
			var    = 0x00000000;
			for(delay=0;delay<=950;delay++);
            IO0PIN = 0x00FF0000;
			var    = 0x00FF0000;
	    for(delay=0;delay<=950;delay++);
    }
}
